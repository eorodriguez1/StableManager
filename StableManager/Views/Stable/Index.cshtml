@model StableManager.Models.StableDetails

@{
    ViewData["Title"] = "Stable Information";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div>
    <hr />
    <div class="form-group">
        <h4>Stable Details</h4>
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-5 col-xs-6">
            <label class="control-label" for="disabledInput">@Html.DisplayNameFor(model => model.StableName)</label>
            <input disabled="" class="form-control" id="disabledInput" type="text" placeholder="@Html.DisplayFor(model => model.StableName) ">
            </div>
            <div class="col-lg-3 col-md-3 col-sm-5 col-xs-6">
                <label class="control-label" for="disabledInput">@Html.DisplayNameFor(model => model.TaxNumber)</label>
                <input disabled="" class="form-control" id="disabledInput" type="text" placeholder="@Html.DisplayFor(model => model.TaxNumber) ">
            </div>
        </div>
        <hr />
        <h4>Stable Address</h4>
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6">
                <label class="control-label" for="disabledInput">@Html.DisplayNameFor(model => model.StableAddress)</label>
                <input disabled="" class="form-control" id="disabledInput" type="text" placeholder="@Html.DisplayFor(model => model.StableAddress)">
            </div>
            <div class="col-lg-2 col-md-2 col-sm-3 col-xs-3">
                <label class="control-label" for="disabledInput">@Html.DisplayNameFor(model => model.StableCity)</label>
                <input disabled="" class="form-control" id="disabledInput" type="text" placeholder="@Html.DisplayFor(model => model.StableCity)">
            </div>
            <div class="col-lg-2 col-md-2 col-sm-3 col-xs-3">
                <label class="control-label" for="disabledInput">@Html.DisplayNameFor(model => model.StableProvState)</label>
                <input disabled="" class="form-control" id="disabledInput" type="text" placeholder="@Html.DisplayFor(model => model.StableProvState)">
            </div>
            <div class="col-lg-2 col-md-2 col-sm-3 col-xs-3">
                <label class="control-label" for="disabledInput">@Html.DisplayNameFor(model => model.StablePostalCode)</label>
                <input disabled="" class="form-control" id="disabledInput" type="text" placeholder="@Html.DisplayFor(model => model.StablePostalCode)">
            </div>
            <div class="col-lg-2 col-md-2 col-sm-3 col-xs-3">
                <label class="control-label" for="disabledInput">@Html.DisplayNameFor(model => model.StableCountry)</label>
                <input disabled="" class="form-control" id="disabledInput" type="text" placeholder="@Html.DisplayFor(model => model.StableCountry)">
            </div>
        </div>
        <hr />
        <h4>Stable Contact</h4>
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
                <label class="control-label" for="disabledInput">@Html.DisplayNameFor(model => model.ContactName)</label>
                <input disabled="" class="form-control" id="disabledInput" type="text" placeholder="@Html.DisplayFor(model => model.ContactName)">
            </div>
            <div class="col-lg-4 col-md-4 col-sm-3 col-xs-3">
                <label class="control-label" for="disabledInput">@Html.DisplayNameFor(model => model.StableEmail)</label>
                <input disabled="" class="form-control" id="disabledInput" type="text" placeholder="@Html.DisplayFor(model => model.StableEmail)">
            </div>
            <div class="col-lg-2 col-md-2 col-sm-3 col-xs-3">
                <label class="control-label" for="disabledInput">@Html.DisplayNameFor(model => model.StablePhone)</label>
                <input disabled="" class="form-control" id="disabledInput" type="text" placeholder="@Html.DisplayFor(model => model.StablePhone)">
            </div>

        </div>
    </div>
    <div class="row">
        <div class="container-fluid pull-right">
            <strong>@Html.DisplayNameFor(model => model.ModifiedOn) : </strong>
            @Html.DisplayFor(model => model.ModifiedOn)
            <br />
            <strong>@Html.DisplayNameFor(model => model.ModifierUserID) : </strong>
            @Html.DisplayFor(model => model.ModifierUserID)
        </div>
    </div>
</div>
<div>
    <a class="btn btn-primary" href="@Url.Action("Edit","Stable")/@Model.StableDetailsID">Edit</a>

</div>
