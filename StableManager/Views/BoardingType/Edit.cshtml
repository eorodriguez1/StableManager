@model StableManager.Models.BoardingType

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}


<h2>@ViewBag.Title</h2>

<hr />
<div>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="BoardingTypeID" />
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="BoardingTypeName" class="control-label"></label>
                    <input asp-for="BoardingTypeName" class="form-control" />
                    <span asp-validation-for="BoardingTypeName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="BoardingTypeDescription" class="control-label"></label>
                    <input asp-for="BoardingTypeDescription" class="form-control" />
                    <span asp-validation-for="BoardingTypeDescription" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="BoardingPrice" class="control-label"></label>
                    <input asp-for="BoardingPrice" value="@Model.BoardingPrice.ToString("0.00")" class="form-control" />
                    <span asp-validation-for="BoardingPrice" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="container-fluid action-buttons">
                <input type="submit" value="Update" class="btn btn-primary" />
                <a class="btn btn-default" asp-action="Index">Back</a>
            </div>
        </div>

        <div class="row">
            <div class="container-fluid pull-right section-modifiedby">
                <strong>@Html.DisplayNameFor(model => model.ModifiedOn) : </strong>
                @Html.DisplayFor(model => model.ModifiedOn)
                <br />
                <strong>@Html.DisplayNameFor(model => model.ModifierUserID) : </strong>
                @Html.DisplayFor(model => model.ModifierUserID)
            </div>
        </div>
    </form>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


<script language="javascript">
    var menuItem = document.getElementById("ManageBoardingTypes").className = "active";
</script>
