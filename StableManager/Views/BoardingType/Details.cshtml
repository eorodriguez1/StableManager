@model StableManager.Models.BoardingType

@{
    ViewData["Title"] = "Boarding Type Details";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}


<h2>@ViewBag.Title</h2>

<div>
    <hr />
    <input type="hidden" asp-for="BoardingTypeID" />
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
            <div class="form-group">
                <label asp-for="BoardingTypeName" class="control-label"></label>
                <input disabled="" asp-for="BoardingTypeName" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
            <div class="form-group">
                <label asp-for="BoardingTypeDescription" class="control-label"></label>
                <input disabled="" asp-for="BoardingTypeDescription" class="form-control" />

            </div>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
            <div class="form-group">
                <label asp-for="BoardingPrice" class="control-label"></label>
                <input type="text" disabled="" asp-for="BoardingPrice" class="form-control" value="@Model.BoardingPrice.ToString("0.00")" />  
            </div>
        </div>
    </div>
    <div class="form-group">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.BoardingTypeID">Edit</a>
        <a class="btn btn-default" asp-action="Index">Back</a>
    </div>


    <div class="row">
        <div class="container-fluid pull-right section-modifiedby">
            <strong>@Html.DisplayNameFor(model => model.ModifiedOn) : </strong>
            @Html.DisplayFor(model => model.ModifiedOn)
            <br />
            <strong>@Html.DisplayNameFor(model => model.ModifierUserID) : </strong>
            @Html.DisplayFor(model => model.ModifierUserID)
        </div>
    </div>

</div>
<script language="javascript">
    var menuItem = document.getElementById("ManageBoardingTypes").className = "active";
</script>
