@model IEnumerable<StableManager.Models.TransactionViewModels.UserTransactionsViewModel>


@{
    ViewData["Title"] = "Transactions";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}

<h2>@ViewBag.Title</h2>
<h4>Transactions by user</h4>

<div class="row">
    <p class="col-lg-12 col-md-12 col-sm-12">
        <a asp-action="ManageByUser">Transactions By User</a> |
        <a asp-action="ManageCurrent">Current Transactions</a> |
        <a asp-action="ManageTransactions">All Transactions</a>

    </p>
</div>

<a class="btn btn-primary" asp-action="Create" asp-route-id="@ViewBag.BillToID">Create New Transaction</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserCharged)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransactionCount)
            </th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="TransactionsByUser" asp-route-id="@item.UserChargedID">@Html.DisplayFor(modelItem => item.UserCharged)</a>
                </td>
                <td class="@( item.Balance < 0 ? "Negative-Value" : "")">
                    <a asp-action="TransactionsByUser" asp-route-id="@item.UserChargedID">@Html.DisplayFor(modelItem => item.Balance)</a>
                </td>
                <td>
                    <a asp-action="TransactionsByUser" asp-route-id="@item.UserChargedID">@Html.DisplayFor(modelItem => item.TransactionCount)</a>
                </td>

            </tr>
        }
    </tbody>
</table>

<script language="javascript">
    var menuItem = document.getElementById("ManageTransactions").className = "active";
</script>