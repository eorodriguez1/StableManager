@model StableManager.Models.Client

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div>
    <hr />
    <input type="hidden" asp-for="ClientID" />
    <h4>Client details</h4>

    <div class="row">
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
            <div class="form-group">
                <label asp-for="ClientNumber" class="control-label"></label>
                <input disabled="" asp-for="ClientNumber" class="form-control" />
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
            <div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
                <select disabled="" asp-for="UserID" class="form-control" asp-items="ViewBag.UserID"></select>
            </div>
        </div>
    </div>
    <div class="row">
        <hr />
        <h4>Preferred Vet Details</h4>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
            <div class="form-group">
                <label asp-for="PreferredVet" class="control-label"></label>
                <input disabled="" asp-for="PreferredVet" class="form-control" />
                <span asp-validation-for="PreferredVet" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-7 col-md-7 col-sm-7 col-xs-12">
            <div class="form-group">
                <label asp-for="PreferredVetDetails" class="control-label"></label>
                <input disabled="" asp-for="PreferredVetDetails" class="form-control" />
                <span asp-validation-for="PreferredVetDetails" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <hr />
        <h4>Alternative Vet Details</h4>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
            <div class="form-group">
                <label asp-for="AlternativeVet" class="control-label"></label>
                <input disabled="" asp-for="AlternativeVet" class="form-control" />
                <span asp-validation-for="AlternativeVet" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-7 col-md-7 col-sm-7 col-xs-12">
            <div class="form-group">
                <label asp-for="AlternativeVetDetails" class="control-label"></label>
                <input disabled="" asp-for="AlternativeVetDetails" class="form-control" />
                <span asp-validation-for="AlternativeVetDetails" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ClientID">Edit</a>
        <a class="btn btn-default" asp-action="Index">Back</a>
    </div>


    <div class="row">
        <div class="container-fluid pull-right section-modifiedby">
            <strong>@Html.DisplayNameFor(model => model.ModifiedOn) : </strong>
            @Html.DisplayFor(model => model.ModifiedOn)
            <br />
            <strong>@Html.DisplayNameFor(model => model.ModifierUserID) : </strong>
            @Html.DisplayFor(model => model.ModifierUserID)
        </div>
    </div>

</div>


<script language="javascript">
    var menuItem = document.getElementById("ManageClients").className = "active";
</script>


