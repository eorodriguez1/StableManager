@model IEnumerable<StableManager.Models.ApplicationUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="RegisterUser">Register New User</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAdmin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsClient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsTrainer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsInstructor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsManager)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEmployee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActiveUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAdmin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsClient)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsTrainer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsInstructor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsManager)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsEmployee)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ActiveUser)
                </td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="ViewUser" asp-route-id="@item.Id">View</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script language="javascript">
    var menuItem = document.getElementById("ManageUsers").className = "active";
</script>
