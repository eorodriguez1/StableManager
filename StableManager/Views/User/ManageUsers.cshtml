@model IEnumerable<StableManager.Models.ApplicationUser>


@{
    ViewData["Title"] = "Manage Users";

    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}

<h2>@ViewBag.Title</h2>
<a class="btn btn-primary" asp-action="RegisterUser">Register New User</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ActiveUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                Phone Number
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ActiveUser)
                </td>
                <td>
                    <a asp-action="ViewUser" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.FullName)</a>
                </td>
                <td>
                    <a asp-action="ViewUser" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.PhoneNumber)</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script language="javascript">
    var menuItem = document.getElementById("ManageUsers").className = "active";
</script>
